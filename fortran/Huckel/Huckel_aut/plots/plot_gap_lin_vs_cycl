set term wxt font "Helvetica,18"

plot "gap_lin_0.00_0.00_1.00" u 1:2 t "linear" w l lw 3 lc 'blue', \
     "gap_cyc_0.00_0.00_1.00" u 1:2 t "cyclic" w l lw 3 lc 'red'
set title "HOMO-LUMO gap vs length of the chain. Beta = 1.00"
set xlabel "Number of carbons"
